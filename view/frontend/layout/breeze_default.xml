<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Mirasvit_RewardsCatalog/js/product/earn-points-renderer" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeMirasvitRewards/js/product/earn-points-renderer</item>
                                <item name="import" xsi:type="array">
                                    <item name="price-utils" xsi:type="string">Swissup_Breeze/js/common/price-utils</item>
                                </item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">mirasvit/rewards/enabled</param>
                                </item>
                            </item>

                            <item name="Mirasvit_RewardsCheckout/js/view/rewards" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeMirasvitRewards/js/view/rewards</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">mirasvit/rewards/enabled</param>
                                </item>
                            </item>
                        </item>
                    </item>
                    <item name="product" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Mirasvit_RewardsCheckout/js/view/rewards-notifications" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeMirasvitRewards/js/view/rewards-notifications</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">mirasvit/rewards/enabled</param>
                                </item>
                            </item>

                            <item name="Mirasvit_RewardsBehavior/js/social" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeMirasvitRewards/js/social</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">mirasvit/rewards/enabled</param>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
